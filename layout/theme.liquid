<!DOCTYPE html>
<html lang="{{ request.locale.iso_code }}">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="{{ page_description | escape }}">
  
  <title>{{ page_title | escape }}{% if current_tags %} - tagged "{{ current_tags | join: ', ' }}"{% endif %}{% if current_page != 1 %} - Page {{ current_page }}{% endif %}{% unless page_title contains shop.name %} - {{ shop.name }}{% endunless %}</title>

  <!-- Preload critical assets -->
  <link rel="preload" href="{{ 'theme.css' | asset_url }}" as="style">
  <link rel="preload" href="{{ 'theme.js' | asset_url }}" as="script">

  <!-- Theme assets -->
  {{ 'theme.css' | asset_url | stylesheet_tag }}
  
  <!-- Shopify-specific -->
  {{ content_for_header }}
</head>
<body class="template-{{ template | handle }} {% if customer %}customer-logged-in{% endif %}">
  {% section 'announcement-bar' %}
  {% section 'header' %}

  <main role="main" id="MainContent">
    {{ content_for_layout }}
  </main>

  {% section 'footer' %}

  <!-- Theme scripts -->
  {{ 'theme.js' | asset_url | script_tag }}
</body>
</html>